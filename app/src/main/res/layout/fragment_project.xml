<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/normal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/project_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorCard"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_indicator_color="@color/light_red"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="@color/grey_divider"
            app:tl_divider_color="@color/light_red"
            app:tl_divider_width="1dp"
            app:tl_divider_padding="@dimen/dp_10"
            app:tl_indicator_corner_radius="5dp"
            app:tl_indicator_margin_left="5dp"
            app:tl_indicator_margin_right="5dp"
            app:tl_indicator_style="BLOCK"
            android:visibility="visible" />

        <View
            android:id="@+id/project_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_divider"
            android:visibility="invisible" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/project_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>